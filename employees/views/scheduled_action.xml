<odoo>
    <record id="ir_cron_send_attendance_reminder" model="ir.cron">
        <field name="name">Send Attendance Reminder</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.send_attendance_reminder()</field>
        <field name="active" eval="True"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(hours=9)).strftime('%Y-%m-%d %H:%M:%S')"/>
    </record>
</odoo>
